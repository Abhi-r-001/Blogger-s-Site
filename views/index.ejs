<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogger's Site</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles/style.css" />
  </head>
  <body>
    <%- include("partials/header.ejs")%>
    <div class="main">
      <%- include("partials/sidebar.ejs")%>
      <div class="blogs container">
        <h2>Blogs</h2>

        <!-- Bootstrap grid with 3 posts per row -->
        <div class="row g-4">
          <% blogs.forEach(post => { %>
            <div class="col-lg-4 col-md-6 col-sm-12">
              <div class="bg-body-secondary posts p-4">
                <h2 class="fw-normal"><%= post.Title.substring(0, 20) %>...</h2>
                <p>
                  <% if (post.blog) { %> 
                    <%= post.blog.substring(0, 200) %>... 
                  <% } else { %> 
                    No content available. 
                  <% } %>
                </p>
                <div class="button container">
                  <p>
                    <a class="btn col-lg-12 btn-secondary" href="/post/<%= post.id %>">
                      Read more »
                    </a>
                  </p>
                  <p>
                    <a class="btn col-lg-12 btn-secondary" href="/edit/<%= post.id %>">
                      Edit »
                    </a>
                  </p>
                  <p>
                    <a class="btn col-lg-12 btn-secondary" href="/delete/<%= post.id %>">
                      Delete »
                    </a>
                  </p>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
    <%- include("partials/footer.ejs")%>
      

 
 

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>